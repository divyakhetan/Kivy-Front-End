<ScreenIntroa>:
    name: "screenintroa"
    FloatLayout:
        Image:
            source: "./assets/united-nations-covid-1.png"
            pos_hint: {'x' : 0, 'y' : 0}
            color: 1,1,1,0.5
            allow_stretch: True
            keep_ratio: False

        Image:
            source: "./assets/Living things logo-01.png"
            pos_hint: {'x' : 0.1, 'top': 0.65}
            size_hint: (0.2, 1)

        Image:
            source: "./assets/Group 24.png"
            pos_hint: {'x': 0.4}
            size_hint:(0.5, 1)

